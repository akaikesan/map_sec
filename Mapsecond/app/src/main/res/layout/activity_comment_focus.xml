<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommentFocusActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/usernameView"
            android:layout_marginTop="40dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="@dimen/font_size_large_medium"/>

        <TextView
            android:id="@+id/contentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usernameView"
            android:textSize="@dimen/font_size_large_medium"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/favFocused"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_below="@+id/contentView"
            android:textSize="@dimen/font_size_medium"
            android:paddingRight="5dp"
            android:paddingStart="240dp"
            android:paddingEnd="5dp"
            android:paddingLeft="240dp" />
    </RelativeLayout>



</android.support.constraint.ConstraintLayout>